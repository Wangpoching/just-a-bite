<% const navbar = [
    ['<li', '><a href="/prize">抽個大獎</a></li>'],
    ['<li', '><a href="/menu">我要點餐</a></li>'],
    ['<li', '><a href="/order">查詢訂單</a></li>'],
    ['<li', '><a href="/FAQ">常見問題</a></li>']
   ]
%>
<nav class="navbar">
  <div class="navbar__wrapper">
    <div class="navbar__site-name"><a href="/index">Just A Bite!</a></div>
    <div class="navbar__list">
      <% for (let i in navbar) { %>
        <% if (Number(i) === navbarId) { %>
          <%- navbar[i].join(' class="active"') %>
        <% } else { %>
          <%- navbar[i].join('') %>
        <% } %>
      <% } %>
      <% if (isLogin) { %>
        <% if (isAdmin) { %>
          <li><a href="/admin-prize">管理後臺</a></li>
        <% } %>
        <li><a href="/logout">登出</a></li>
      <% } else { %>
        <li><a href="/login">登入</a></li>
      <% } %>
    </div>
  </div>
</nav>